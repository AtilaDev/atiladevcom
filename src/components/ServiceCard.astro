---
interface Props {
  num: string;
  title: string;
  description: string;
}
const { num, title, description } = Astro.props;
---

<div class="flex-1 flex flex-col justify-center gap-6 group">
  {/* top */}
  <div class="w-full flex justify-between items-center">
    <div
      class="text-5xl font-extrabold text-white/40 group-hover:text-cyan-400 transition-all duration-500 font-mono"
    >
      {num}
    </div>
  </div>
  {/* heading */}
  <h2
    class="text-3xl font-bold leading-none text-white group-hover:text-cyan-400 transition-all duration-500"
  >
    {title}
  </h2>
  {/* description */}
  <p class="text-white/60">{description}</p>
</div>
